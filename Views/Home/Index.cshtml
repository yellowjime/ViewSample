@model IEnumerable<ViewSample.Models.DB.Employee>
@{
    ViewData["Title"] = "Index";
}

<h1>人員列表</h1>
<a asp-action="Insert">新增</a>
<table>
    <thead>
        <tr>
            <td>@Html.DisplayNameFor(m => m.Name)</td>
            <td>@Html.DisplayNameFor(m => m.Address)</td>
            <td>@Html.DisplayNameFor(m => m.Birthday)</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.Name)</td>
                <td>@Html.DisplayFor(m => item.Address)</td>
                <td>@Html.DisplayFor(m => item.Birthday)</td>
                <td>
                    <a asp-action="Show" asp-route-id="@item.Id">檢視</a>
                    <a asp-action="Edit" asp-route-id="@item.Id">編輯</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">刪除</a>
                </td>

            </tr>
        }
    </tbody>

</table>